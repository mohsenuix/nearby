<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="@dimen/medium_spacing"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/small_spacing">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:id="@+id/feed_item"
        android:layout_height="match_parent"
        android:focusable="true">

        <androidx.appcompat.widget.AppCompatImageView
            android:scaleType="fitXY"
            android:id="@+id/img_picture"
            android:layout_width="match_parent"
            android:layout_height="120dp" />

        <View
            android:background="@drawable/square"
            android:id="@+id/chk_box"
            android:layout_width="@dimen/medium_spacing"
            android:layout_marginTop="@dimen/large_spacing"
            android:layout_marginRight="@dimen/medium_spacing"
            android:layout_marginLeft="@dimen/medium_spacing"
            android:layout_height="@dimen/medium_spacing"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/img_picture"
            android:enabled="false"
            />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_picture"
            android:layout_toLeftOf="@+id/chk_box"
            android:layout_toStartOf="@+id/chk_box"
            android:text="نام رستوران"
            android:layout_marginTop="@dimen/medium_spacing"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_medium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_title"
            android:layout_toLeftOf="@+id/chk_box"
            android:layout_toStartOf="@+id/chk_box"
            android:textSize="@dimen/font_size_small"
            android:text="131 کیلومتر"
            android:textColor="@color/dark_gray" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>