<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ExtraTextView">
        <attr name="ext_txt_drawable" format="reference" />
        <attr name="ext_txt_drawableWidth" format="dimension" />
        <attr name="ext_txt_drawableHeight" format="dimension" />
        <attr name="ext_txt_drawablePosition" format="enum">
            <enum name="left" value="0" />
            <enum name="top" value="1" />
            <enum name="right" value="2" />
            <enum name="bottom" value="3" />
        </attr>
        <attr name="ext_txt_drawableTint" format="color" />
        <attr name="ext_txt_drawableFit" format="boolean"/>
        <attr name="ext_txt_cornerRadius" format="dimension" />
        <attr name="ext_txt_cornerBorderSize" format="dimension" />
        <attr name="ext_txt_cornerBorderColor" format="color" />
        <attr name="ext_txt_cornerBackgroundColor" format="color" />
    </declare-styleable>

    <declare-styleable name="ToggleExtraTextView">
        <attr name="ext_txt_state" format="enum">
            <enum name="active" value="0" />
            <enum name="waiting" value="1" />
            <enum name="idle" value="2" />
        </attr>
        <attr name="ext_txt_activeDrawable" format="reference" />
        <attr name="ext_txt_activeTint" format="color" />
        <attr name="ext_txt_waitingTint" format="color" />
        <attr name="ext_txt_idleDrawable" format="reference" />
        <attr name="ext_txt_idleTint" format="color" />
    </declare-styleable>
</resources>